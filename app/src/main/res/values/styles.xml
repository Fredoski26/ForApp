<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuStyle" parent= "Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="MenuStyle2" parent= "Theme.MaterialComponents.Light.Dialog.FixedSize">
        <item name="android:background">@android:color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Menu_post" parent= "Theme.MaterialComponents.Light.Dialog.FixedSize">
        <item name="android:background">@android:color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

//Theme without ActionBar
    <style name="AppThemeNo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
