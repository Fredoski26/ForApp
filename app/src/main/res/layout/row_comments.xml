<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginBottom="1dp"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="1dp"
    android:focusable="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarTv_comment"
            android:src="@drawable/ic_profile_post"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"

            android:layout_width="30dp"
            android:layout_height="30dp">
        </de.hdodenhof.circleimageview.CircleImageView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/nameTv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/cardview_dark_background"
            android:layout_toEndOf="@id/avatarTv_comment"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="message"
            >
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/commentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_below="@id/nameTv_comment"
            android:textColor="@color/cardview_dark_background"
            android:layout_toEndOf="@id/avatarTv_comment"
            android:text="@string/comment_message"
            >
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/timeTv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_below="@id/commentTv"
            android:layout_toEndOf="@id/avatarTv_comment"
            android:text="@string/_14_08_2020"
            >
        </com.google.android.material.textview.MaterialTextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>